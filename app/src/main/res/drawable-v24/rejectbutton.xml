<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#E62112" />
            <gradient android:angle="-90" android:startColor="#770C04" android:endColor="#AC4841"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#B92116" />
            <solid android:color="#CC5F57"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#DD1F12" />
            <gradient android:angle="-90" android:startColor="#9E150B" android:endColor="#DB493E" />
        </shape>
    </item>
</selector>