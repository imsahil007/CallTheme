<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#159E1B" />
            <gradient android:angle="-90" android:startColor="#027407" android:endColor="#98E499"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#07550A" />
            <solid android:color="#046B08"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="3dip" />
            <stroke android:width="1dip" android:color="#1DE920" />
            <gradient android:angle="-90" android:startColor="#7EE082" android:endColor="#27B12B" />
        </shape>
    </item>
</selector>